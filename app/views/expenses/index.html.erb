<div class="row">
	<div class="col-md-12">

		<h1>Expense Items Listing</h1>

		<%= form_tag transactions_path, method: :get do%>
			<%= label_tag(:search, "Search for:") %>
			<%= text_field_tag :search %>
			<%= submit_tag "Search" %>
		<% end %>	

		<%= link_to 'Add New Expense Item', new_expense_path %>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<table class="table table-striped">
			<tr>
				<th>Expense Account</th>
				<th>Expense Group</th>
			</tr>

			<% @expenses.each do |expense| %>
			<tr>
		 		<td><%= expense.name %></td>
				<td><%= expense.exp_group.try(:name) %></td>

				<%# if current_user %>
					<td><%= link_to 'edit', edit_expense_path(expense), :target=>"_top" %></td>
					<td><%= link_to 'delete', expense_path(expense), method: :delete, data: {Confirm: "Are you sure you want to delete?  This action is permenant."} %></td>
					<% end %>
				<%# end  %>
			</tr>
		</table>
	</div>
</div>

