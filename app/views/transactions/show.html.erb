<h1>Transaction Detail</h1>

<% if @character.errors.any? %>
	<div id="error_explanation">
    	<h3><%= pluralize(@character.errors.count, "error") %> prohibited this new character from being saved:</h3>
	      <ul>
	      	<% @character.errors.full_messages.each do |message| %>
	        	<li><%= message %></li>
	      	<% end %>
	      </ul>
	</div>
<% end %>
<div><%= image_tag @transaction.photo.url(:thumb)%></div>
<table>
	<tr>
		<th>Month:  </th>
		<th>Year:</th>
		<th>Vendor:</th>
		<th>Expense Group:</th>
		<th>Expense Acct:</th>
		<th>Transaction Description:</th>
		<th>Amount</th>
	</tr>

	<tr>
		<td> <%= @transaction.month %></td>
		<td> <%= @transaction.year %></td>
		<td> <%= @transaction.vendor.name %></td>
		<td> <%= @transaction.exp_group.name %></td>
		<td> <%= @transaction.expense.name %></td>
		<td> <%= @transaction.descr %></td>
		<td>Amount: <%= @transaction.amt %></td>
	</tr>
</table>

<div><%= link_to "Return to ALL Transactions, transactions_path" %></div>
<% if current_user %>
	<p>Expense Items Actions
		<ul>
			<li><%= link_to 'Add new expense account', new_expense_path, :target=>"_blank" %></li>
			<li><%= link_to 'Edit an expense account', expenses_path, :target=>"_blank" %></li>
		</ul>
	</p>

	<p>Expense Group Actions
		<ul>
			<li><%= link to 'Add new expense group', new_exp_group_path, :target=>"_blank" %></li>
			<li><%= link_to 'Edit an expense group', exp_groups_path, :target=>"_blank" %></li>
		</ul>
	</p>

	<p>Actions Actions
